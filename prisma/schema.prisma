generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Airport {
  id                                        Int      @id @default(autoincrement())
  airportId                                 String   @unique
  aiportName                                String
  locationId                                Int
  createdAt                                 DateTime @default(now())
  updatedAt                                 DateTime
  Location                                  Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  Flight_Flight_arrivalAirportIdToAirport   Flight[] @relation("Flight_arrivalAirportIdToAirport")
  Flight_Flight_departureAirportIdToAirport Flight[] @relation("Flight_departureAirportIdToAirport")
}

model Attraction {
  id          Int      @id @default(autoincrement())
  address     String
  city        String
  country     String
  description String?
  locationId  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Location    Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
}

model Flight {
  id                                         Int      @id @default(autoincrement())
  flightName                                 String
  flightNumber                               String?
  airlineName                                String
  departureAirportId                         Int
  arrivalAirportId                           Int
  createdAt                                  DateTime @default(now())
  updatedAt                                  DateTime
  Airport_Flight_arrivalAirportIdToAirport   Airport  @relation("Flight_arrivalAirportIdToAirport", fields: [arrivalAirportId], references: [id], onDelete: Cascade)
  Airport_Flight_departureAirportIdToAirport Airport  @relation("Flight_departureAirportIdToAirport", fields: [departureAirportId], references: [id], onDelete: Cascade)
}

model Location {
  id          Int          @id @default(autoincrement())
  city        String?
  cityName    String
  country     String?
  countryName String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime      @updatedAt
  Airport     Airport[]
  Attraction  Attraction[]
}
